<?xml version="1.0"?>

<launch>
  <arg name="ns" default="johnny5/footstep_planning" />
  <arg name="gui" default="False" />
  <arg name="default_params" default="preview_walking" />
  <arg name="default_plugin_set_file" default="plugin_sets.yaml" />

  <group ns="$(arg ns)">
    <!-- start robot model server -->
    <include file="$(find thor_mang_l3_config)/launch/robot_model_server.launch" />

    <!-- start up footstep planning system -->
    <include file="$(find l3_footstep_planning)/launch/footstep_planning_basics.launch" />

    <!-- start footstep planner -->
    <node name="thor_mang_footstep_planner" pkg="l3_global_footstep_planner" type="global_footstep_planner_node" respawn="true" output="screen" />

    <!-- load sets from YAML file to parameter server -->
    <rosparam file="$(dirname)/../config/$(arg default_plugin_set_file)" command="load" />
    
    <!-- specify where to load robot specific parameters -->
    <param name="params_path" value="$(dirname)/../config/planner/" />
    <param name="default_params" value="$(arg default_params)" />
  </group>

  <!-- start step widget -->
  <include file="$(find l3_footstep_planning_widgets)/launch/step_interface_rqt.launch" if="$(arg gui)">
    <arg name="ns" value="$(arg ns)" />
  </include>
</launch>
