<?xml version="1.0"?>

<launch>
  <arg name="ns" default="johnny5/footstep_planning" />
  <group ns="$(arg ns)">
    <!-- start robot description server -->
    <node name="robot_description_server" pkg="l3_libs" type="robot_description_server" respawn="true" output="screen" />

    <!-- start up footstep planning system -->
    <include file="$(find l3_footstep_planning)/launch/footstep_planning_basics.launch" />

    <!-- start footstep planner -->
    <node name="thor_mang_footstep_planner" pkg="l3_global_footstep_planner" type="global_footstep_planner_node" respawn="true" output="screen" />

    <!-- load sets from YAML file to parameter server -->
    <rosparam file="$(find thor_mang_footstep_planner)/config/thor_mang_plugin_sets.yaml" command="load" />
    
    <!-- specify where to load robot specific parameters -->
    <rosparam file="$(find thor_mang_l3)/config/robot_description.yaml" command="load" />
    <param name="params_path" value="$(find thor_mang_footstep_planner)/config/planner/" />
    <param name="default_params" value="preview_walking" />
  </group>
</launch>
